@model IEnumerable<GameOfBrushes.Models.Game>

@{
    ViewBag.Title = "All";
}

<h2>All</h2>

<p>
    @Html.ActionLink("Create Lobbie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstPlaceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondPlaceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThirdPlaceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastPlaceId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstPlaceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondPlaceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThirdPlaceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastPlaceId)
        </td>
        <td>
            @Html.ActionLink("Join", "Join", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Exit", "Exit", new { id=item.Id })
        </td>
    </tr>
}

</table>
